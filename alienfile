use alienfile;
 
probe [ 'which sloccount' ];
 
share {
  start_url 'https://www.dwheeler.com/sloccount/sloccount-2.26.tar.gz';
  download [ 'wget %{.meta.start_url}' ];
  extract [ 'tar zxf %{.install.download}' ];
  build [
    [ '%{make} EXE_SUFFIX=.exe' ],
    [ '%{make} install' ],
  ];
};
 
# vim: ft=perl
